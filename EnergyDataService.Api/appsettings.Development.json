{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog":{
    "MinimumLevel":{
      "Default":"Information",
      "Override":{
        "Microsoft":"Warning",
        "Microsoft.Hosting.Lifetime":"Information",
        "System":"Warning"
      }
    }
  },
  "WriteTo": [
    { "Name": "Console"},
      {
        "Name": "File",
        "Args": {
          "path": "logs/deviceservice-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
      }
    }
  ],
  "Enrich": [ 
    "FromLogContext", 
    "WithMachineName", 
    "WithEnvironmentName",
    "WithThreadId",
    "WithProcessId"
  ],
  "Redis": {
    "Host": "redis",
    "Port": 6379,
    "Password":"",
    "InstanceName": "deviceservice:"
  }
}
