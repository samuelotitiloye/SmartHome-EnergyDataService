{
  "id": null,
  "uid": "deviceservice-api-metrics",
  "title": "EnergyDataService â€“ API Metrics",
  "tags": ["deviceservice", "metrics", "api", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",

  "panels": [
    {
      "type": "row",
      "title": "Traffic",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },

    {
      "id": 1,
      "title": "Requests per Second (RPS)",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_request_duration_seconds_count[1m]))"
        }
      ],
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 }
    },

    {
      "id": 2,
      "title": "2xx / 4xx / 5xx Count (1m rate)",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_request_duration_seconds_count{http_response_status_code=~\"2..\"}[1m]))",
          "legendFormat": "2xx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(http_server_request_duration_seconds_count{http_response_status_code=~\"4..\"}[1m]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "C",
          "expr": "sum(rate(http_server_request_duration_seconds_count{http_response_status_code=~\"5..\"}[1m]))",
          "legendFormat": "5xx"
        }
      ],
      "options": {
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 }
    },

    {
      "id": 3,
      "title": "Error Rate (%)",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "((sum(rate(http_server_request_duration_seconds_bucket{http_response_status_code=~\"4..|5..\"}[1m]))/sum(rate(http_server_request_duration_seconds_bucket[1m]))) * 100 or vector(0))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 15 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 }
    },

    {
      "type": "row",
      "title": "Latency",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }
    },

    {
      "id": 4,
      "title": "p90 Latency (ms)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.90, sum by (le) (rate(http_server_request_duration_seconds_bucket[1m]))) * 1000"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 }
    },

    {
      "id": 5,
      "title": "p99 Latency (ms)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_server_request_duration_seconds_bucket[1m]))) * 1000"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 }
    },

    {
      "type": "row",
      "title": "Health / System",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 }
    },

    {
      "id": 6,
      "title": "Health Check Status (Ready)",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(http_server_request_duration_seconds_count{http_route=\"/health/ready\",http_response_status_code=\"200\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 19 }
    }
  ],

  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
